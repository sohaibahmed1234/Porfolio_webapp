<div id="services" class="cards-1">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2>Jobs</h2>
        <p class="p-heading p-large">We serve small and medium sized companies in all tech related industries with high quality growth services which are presented below</p>
      </div> <!-- end of col -->
    </div> <!-- end of row -->
    <div class="row">
      <div class="col-lg-12">

        <% @jobs.each do |job| %>
        <!-- Card -->
          <a href="job_applications/new?job_id=<%=job.id %>">
        <div class="card"style="width: 300px;height: 350px;padding:20px;margin: 30px; ">

          <div class="card-body">
            <h4 class="card-title"style="font-size: 25px"><%=job.job_title %></h4>
            <p><%= job.job_details%></p>
            <p style="font-size:18px;color: #0b0b0b; "> Job type: <%= job.job_type%></p>
          </div>
        </div>
          </a>
        <!-- end of card -->

       <% end%>



      </div> <!-- end of col -->
    </div> <!-- end of row -->
  </div> <!-- end of container -->
</div> <!-- end of cards-1 -->
<!-- end of services -->