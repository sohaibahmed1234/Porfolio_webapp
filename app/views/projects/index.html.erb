<!DOCTYPE html>
<header id="header1" class="header_main_page_image">
  <div class="header-content">
  </div>
</header>
<%= render "layouts/navbar" %>
<div id="page" class="site tg-site">
  <h2 class="elementor-heading-title elementor-size-default" style="margin-bottom: 100px;margin-top: 20px; text-align: center;">Our
    Recent Showcase</h2></div>

  <% @project.each_with_index do |project, i| %>
    <h2 class="" style="margin-left:50px;text-align:left; margin-bottom: 20px;font-size:30px;"><%= i + 1 %>
      : <%= project.project_name %></h2>
    <div class="card" style="border:0px;width:1180px;margin-left:50px ;margin-bottom: 30px">
      <div class="row no-gutters">
        <div class="col-md-7">

          <%= link_to(image_tag(project.image_url,size: "900x450", class: "img-fluid", alt: "alternative"),project.weblink)%>
        </div>
        <div class="col-md-4" style="padding-left:30px;margin-left:50px">
          <div class="card-body">
            <h5 class="card-title" style="font-size:30px;">Description</h5>
            <p class="p-large" style="font-size:20px;  color: #0b0b0b; "><%= project.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="elementor-element elementor-element-dd658ba elementor-widget elementor-widget-heading" data-id="dd658ba" data-element_type="widget" data-widget_type="heading.default">
      <div class="elementor-widget-container">
        <h2 class="elementor-heading-title elementor-size-default" style="margin-left:50px;text-align:left;font-size:30px; ">Technology
          Stack</h2></div>
    </div>
    <div class="technology-btn" >
      <% project.technologies.each do |tool| %>
        <span class="badge badge-pill badge-dark" style="background-color: #00bfd8;"><%= tool.name %></span>
      <% end %>
    </div>
  <% end %>
</div>

<footer id="colophon" class="site-footer tg-site-footer ">
  <%= render "layouts/footer" %>
</footer>
</div>



